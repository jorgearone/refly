# ==============================================
# CONFIGURACIÓN PARA EASYPANEL - REFLY
# ==============================================

# DOMINIO (configura tu dominio de Easypanel)
DOMAIN=tu-dominio.easypanel.host

# ==============================================
# SEGURIDAD - CAMBIAR TODAS ESTAS CONTRASEÑAS
# ==============================================

# Base de datos PostgreSQL
POSTGRES_PASSWORD=refly_secure_password_2025

# Redis
REDIS_PASSWORD=refly_redis_password_2025

# MinIO (Almacenamiento de archivos)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_secure_2025

# JWT para autenticación (generar clave aleatoria)
JWT_SECRET=tu_super_secreto_jwt_cambiar_esto_por_algo_aleatorio

# ==============================================
# APIs REQUERIDAS - DEBES CONFIGURAR ESTAS
# ==============================================

# OpenAI API (REQUERIDO)
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-tu-clave-openai-aqui

# ==============================================
# APIs OPCIONALES - MEJORAN LA FUNCIONALIDAD
# ==============================================

# Jina AI para embeddings (mejorar búsqueda)
# Obtener en: https://jina.ai/
JINA_API_KEY=jina_tu_clave_aqui

# Serper para búsqueda web (mejorar búsqueda)
# Obtener en: https://serper.dev/
SERPER_API_KEY=tu_clave_serper_aqui

# Antropic Claude (opcional)
# Obtener en: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-tu-clave-anthropic-aqui

# Google Gemini (opcional)
# Obtener en: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=tu_clave_google_aqui

# ==============================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ==============================================

# Resend para emails (opcional)
# Obtener en: https://resend.com/
EMAIL_AUTH_ENABLED=false
RESEND_API_KEY=re_tu_clave_resend_aqui
EMAIL_SENDER=info@tu-dominio.com

# ==============================================
# CONFIGURACIÓN AVANZADA (OPCIONAL)
# ==============================================

# Configuración de quotas (-1 = ilimitado)
QUOTA_T1_TOKEN=-1
QUOTA_T2_TOKEN=-1
QUOTA_T1_REQUEST=-1
QUOTA_T2_REQUEST=-1
QUOTA_STORAGE_FILE=-1
QUOTA_STORAGE_OBJECT=-1
QUOTA_STORAGE_VECTOR=-1
QUOTA_FILE_PARSE_PAGE=-1
